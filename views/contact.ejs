<div id="contact_section" class="section">
    <h2 class="contact-header" data-i18n-key="get-in-touch">Get in touch!</h2>

      <div class="contact_form--container">
          <form class="contact_form" novalidate>
              <div class="form_loader"></div>
              <div class="form_overlay">

                  <div class="form_failure hide">
                      <p>Oh no! Something went wrong. Please try again</p>
                  </div>

                  <div class="form-group">
                      <label class="contact_label" for="contact_name" data-i18n-key="name">Name</label>
                      <input type="text" class="form-control" id="contact_name" name="contact[name]" aria-describedby="name" required>
                  </div>
                  <div class="form-group">
                      <label class="contact_label" for="contact_email" data-i18n-key="email">Email</label>
                      <input type="email" class="form-control" id="contact_email" name="contact[email]" aria-describedby="email" required>
                  </div>
                  <div class="form-group">
                      <label class="contact_label" for="contact_message" data-i18n-key="message">Message</label>
                      <textarea class="form-control" id="contact_message" name="contact[message]" rows="3" required></textarea>
                  </div>
  
                  <div class="form_submit">
                      <button type="submit" class="btn link-button contact-submit-button" data-i18n-key="submit">Send</button>
                  </div>

              </div>

              <div class="form_success hide">
                  <img class="form_success--1" src="/assets/images/icons/tick.png" alt="Tick Icon">
                  <h3 class="form_success--2" data-i18n-key="thank-you">Thank You!</h3>
                  <p class="form_success--3" data-i18n-key="success-message">I'll get back to you as soon as possible</p>
              </div>

          </form>

      </div>
      </div>
  
</div>